{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "todofiles",
  "rules": {
    "source_file": {
      "type": "SEQ",
      "members": [
        {
          "type": "REPEAT",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "SYMBOL",
                "name": "category"
              },
              {
                "type": "SEQ",
                "members": [
                  {
                    "type": "SYMBOL",
                    "name": "task"
                  },
                  {
                    "type": "PATTERN",
                    "value": "\\n"
                  }
                ]
              },
              {
                "type": "SEQ",
                "members": [
                  {
                    "type": "SYMBOL",
                    "name": "comment"
                  },
                  {
                    "type": "PATTERN",
                    "value": "\\n"
                  }
                ]
              },
              {
                "type": "PATTERN",
                "value": "\\n"
              }
            ]
          }
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "CHOICE",
              "members": [
                {
                  "type": "SYMBOL",
                  "name": "task"
                },
                {
                  "type": "SYMBOL",
                  "name": "comment"
                }
              ]
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "category": {
      "type": "SYMBOL",
      "name": "_category_definition"
    },
    "task": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "todo"
        },
        {
          "type": "SYMBOL",
          "name": "done"
        },
        {
          "type": "SYMBOL",
          "name": "cancelled"
        }
      ]
    },
    "checkbox": {
      "type": "PATTERN",
      "value": "☐"
    },
    "checkmark": {
      "type": "PATTERN",
      "value": "✔"
    },
    "cancelled_mark": {
      "type": "PATTERN",
      "value": "☒"
    },
    "task_text": {
      "type": "PATTERN",
      "value": "[^@\\n]+"
    },
    "at_word": {
      "type": "PATTERN",
      "value": "@[^\\s\\n(]*"
    },
    "tag_done": {
      "type": "PATTERN",
      "value": "@done\\([^)]*\\)"
    },
    "tag_started": {
      "type": "PATTERN",
      "value": "@started\\([^)]*\\)"
    },
    "tag_cancelled": {
      "type": "PATTERN",
      "value": "@cancelled\\([^)]*\\)"
    },
    "_task_body": {
      "type": "REPEAT1",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "task_text"
          },
          {
            "type": "SYMBOL",
            "name": "at_word"
          },
          {
            "type": "SYMBOL",
            "name": "tag_done"
          },
          {
            "type": "SYMBOL",
            "name": "tag_started"
          },
          {
            "type": "SYMBOL",
            "name": "tag_cancelled"
          }
        ]
      }
    },
    "_category_definition": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "_category_expression"
        }
      ]
    },
    "todo": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "checkbox"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "_task_body"
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "done": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "checkmark"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "_task_body"
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "cancelled": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "cancelled_mark"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "_task_body"
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "_category_expression": {
      "type": "TOKEN",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "PATTERN",
            "value": ".*"
          },
          {
            "type": "PATTERN",
            "value": ":"
          },
          {
            "type": "PATTERN",
            "value": "\\n"
          }
        ]
      }
    },
    "comment": {
      "type": "PATTERN",
      "value": "[^☐✔☒\\s].*[^:\\n]|[^☐✔☒\\s:\\n]"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "[^\\S\\n]"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}