{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "todofiles",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "_definition"
      }
    },
    "_definition": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "category"
        },
        {
          "type": "SYMBOL",
          "name": "task"
        },
        {
          "type": "SYMBOL",
          "name": "comment"
        }
      ]
    },
    "category": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "_category_definition"
        }
      ]
    },
    "task": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "todo"
        },
        {
          "type": "SYMBOL",
          "name": "done"
        },
        {
          "type": "SYMBOL",
          "name": "cancelled"
        }
      ]
    },
    "checkbox": {
      "type": "PATTERN",
      "value": "☐"
    },
    "checkmark": {
      "type": "PATTERN",
      "value": "✔"
    },
    "cancelled_mark": {
      "type": "PATTERN",
      "value": "☒"
    },
    "statement": {
      "type": "PATTERN",
      "value": ".*"
    },
    "_category_definition": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "_category_expression"
        }
      ]
    },
    "todo": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "checkbox"
        },
        {
          "type": "SYMBOL",
          "name": "statement"
        }
      ]
    },
    "done": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "checkmark"
        },
        {
          "type": "SYMBOL",
          "name": "statement"
        }
      ]
    },
    "cancelled": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "cancelled_mark"
        },
        {
          "type": "SYMBOL",
          "name": "statement"
        }
      ]
    },
    "_category_expression": {
      "type": "TOKEN",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "PATTERN",
            "value": ".*"
          },
          {
            "type": "PATTERN",
            "value": ":"
          },
          {
            "type": "PATTERN",
            "value": "\\n"
          }
        ]
      }
    },
    "comment": {
      "type": "PATTERN",
      "value": "[^☐✔☒\\s].*[^:\\n]|[^☐✔☒\\s:\\n]"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}